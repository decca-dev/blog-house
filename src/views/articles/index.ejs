<div class="container">
  <h1 class="mb-4">Blog Articles</h1>
  <a href="/articles/new" class="btn btn-primary"
    ><img
      src="../../public/art/new.png"
      alt="new"
      width="25"
      height="25"
      class="inline-block align-center"
    />
    New</a
  >
  <% if (typeof random !== "undefined") { %>
    <h1 class="mb-3 pt-3">Random Post</h1>
    <div class="card mt-4 mb-5">
      <div class="card-body bg-gradient-to-r from-purple-400 via-pink-500 to-red-500">
        <h4 class="card-title"><%= random.title %></h4>
        <div class="card-subtitle text-muted mb-2">
          <%= random.createdAt.toLocaleDateString() %>
        </div>
        <div class="card-text mb-2">
          <%= random.description.substr(0, 50) %>...
        </div>
        <a href="/articles/<%= random.slug %>" class="btn btn-primary"
          >Read more</a
        >
        <% if (user && random.author === user.uid) { %>
        <a href="/articles/edit/<%= random.id %>" class="btn btn-info">Edit</a>
        <form
          action="/articles/<%= random.id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>  
  <% } %>
  <% if (articles.length > 0) { %> 
    <h1 class="mb-3 pt-3">All recent posts</h1>
  <% articles.forEach(article => { %>
  <div class="card mt-4">
    <div class="card-body">
      <h4 class="card-title"><%= article.title %></h4>
      <div class="card-subtitle text-muted mb-2">
        <%= article.createdAt.toLocaleDateString() %>
      </div>
      <div class="card-text mb-2">
        <%= article.description.substr(0, 50) %>...
      </div>
      <a href="/articles/<%= article.slug %>" class="btn btn-primary"
        >Read more</a
      >
      <% if (user && article.author === user.uid) { %>
      <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
      <form
        action="/articles/<%= article.id %>?_method=DELETE"
        method="POST"
        class="d-inline"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <% } %>
    </div>
  </div>
  <% }) %> <% }else { %>
  <img
    src="../../public/emojis/cricket.svg"
    alt="cricket"
    width="300"
    height="300"
    class="mx-auto"
  />
  <div class="text-center">
    <h1>*Cricket noises*</h1>
    <br />
    <h2>Seems like there aren't any Articles!</h2>
  </div>
  <% } %>
</div>
