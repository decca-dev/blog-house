<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <h1 class="mb-3">
                <img src="../public/art/logo.png" alt="logo" width="20%" class="mx-auto">
            </h1>
            <h2>
                Forgot Password
            </h2>
            <%- include('partials/messages') %>
            <form action="/users/forgot" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control mb-4" placeholder="Email" value="<%= typeof password != 'undefined' ? password : '' %>">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Send me a password reset link</button>
            </form>
            <p class="mt-4">
                Remember your password? <a href="/auth/login">Login</a>
            </p>
        </div>
    </div>
</div>